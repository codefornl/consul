<% if header.present? %>
  <div class="jumbo highlight">
    <div class="row" data-equalizer>
      <div class="small-12 medium-6 column <%= "medium-9 small-centered text-center" unless header.image.present? %>" data-equalizer-watch>
        <span><%= header.label %></span>
        <h1><%= header.title %></h1>
        <p class="lead"><%= header.description %></p>
        <div class="small-12 medium-6 large-4 <%= "small-centered" unless header.image.present? %>">
          <%= link_to header.link_text, header.link_url, class: "button expanded large" %>
        </div>
      </div>

      <% if header.image.present? %>
        <div class="small-12 medium-6 column" style="background-image:url('<%= header.image_url(:large)%>');background-size:cover;" title="<%=header.image.title%>" data-equalizer-watch>
        </div>
      <% end %>
    </div>
  </div>
  <div class="background-header"></div>
<% end %>
